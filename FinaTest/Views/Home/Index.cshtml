    ViewBag.Title = "Index";
}


@* პროდუცტის რედაცტირება *@

@* კატეგორია *@
<div class="AddCategoryopap hide-item" id="AddCategoryopap">
    <div class="card">
        <div class="card-body">
            <img  class="icons" id="CloseCategorygrupopap" src="~/Content/icons/clear-24px.svg" />

            <h5 class="card-title">კატეგორის დამატება</h5>
            <input type="text" id="addCategory" class="form-control" name="addCategory" placeholder="კატეგორის სახელი" />
            <button class="btn btn-primary Categorygrubutton">
                შენახვა
                <img class="icons" src="~/Content/icons/keyboard_arrow_down-24px.svg" />

            </button>
            <p id="erroren">შეავსეთ ველი </p>
        </div>
    </div>
</div>

@* პროდუცტის დამატება *@

<div class="addproductopap hide-item" id="addproductopap">
    <form action="/Home/Addproduct" method="post">
        <div class="form-row">
            <img class="icons" style="margin-left:440px" id="Closeproductopap" src="~/Content/icons/clear-24px.svg" />
            <div class="form-group  row">
                <label for="Code" class="col-sm-2 col-form-label">კოდი</label>
                <div class="col-sm-10">
                    <input type="number" id="Code" class="form-control" name="Code" value="კოდი" />
                </div>
            </div>
            <div class="form-group row ">
                <label for="Code" class="col-sm-2 col-form-label">სახელი</label>
                <div class="col-sm-10">
                    <input type="text" id="Name" name="Name" class="form-control" placeholder="სახელი" />
                </div>
            </div>
            <div class="form-group  row">
                <label for="country" class="col-sm-2 col-form-label">ქვეყანა</label>
                <div class="col-sm-10">
                    <select id="country" name="country" class="form-control">
                        <option selected>საქართველო</option>
                        <option>ამერიკა</option>
                        <option>თურქეთი</option>
                        <option>იტალია</option>
                    </select>
                </div>
            </div>
            <div class="form-group row ">
                <label for="Price" class="col-sm-2 col-form-label">ფასი</label>
                <div class="col-sm-10">
                    <input type="text" id="Price" class="form-control" name="Price" placeholder="ფასი" />
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="startDate" class="col-form-label">შექმნის თარიღი</label>
                <input type="date" id="startDate" name="startDate" />
            </div>
            <div class="form-group col-md-6">
                <label for="CompletionDate" class="col-form-label">შექმნის თარიღი</label>
                <input type="date" id="CompletionDate" name="CompletionDate" />
            </div>

        </div>
        <input type="text" id="inputaddprodu" hidden name="CategoryId" />
        <button type="submit" class="btn btn-primary productseiv">შენახვა</button>


    </form>

</div>



@* ჯგუფის დამატება *@

<div class="Addgrupopap hide-item" id="Addgrupopap">
    <div class="card">
        <div class="card-body">
            <img class="icons" id="CloseAddgrupopap" src="~/Content/icons/clear-24px.svg" />

            <h5 class="card-title">ჯგუფი დამატება</h5>
            <input type="text" id="add-grup" class="form-control" name="add-grup" placeholder="ჯგუფი სახელი" />
            <button id="savedgrup" class="btn btn-primary Addgrubutton">
                შენახვა
                <img class="icons" src="~/Content/icons/keyboard_arrow_down-24px.svg" />

            </button>
            <p id="erroren">შეავსეთ ველი </p>
        </div>
    </div>
</div>

<div class="editgrupopap hide-item" id="editgrupopap">
    <div class="card">
        <div class="card-body">
            <img class="icons" id="Closeeditgrupopap" src="~/Content/icons/clear-24px.svg" />

            <h5 class="card-title">ჯგუფი რედაცტირება</h5>
            <input type="text" id="edit-grup" class="form-control" name="add-grup" />
            <button class="btn btn-primary Addgrubutton editgrup">
